@model TaxManagementSystem.Models.CalcutaeTax

@{
    ViewBag.Title = "CalculateTax";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

  
    <div class="col-md-6">
        <h2 class="text-primary">Calculate  Tax</h2>

        <hr />
        @using (Html.BeginForm("CalculateTax", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">

            
                @Html.ValidationSummary(true)

                <div class="form-group">

                    <div class="col-md-10">
                        @Html.LabelFor(model => model.GrossIncome)

                        @Html.TextBoxFor(model => model.GrossIncome, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GrossIncome)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.LabelFor(model => model.TaxRelief)

                        @Html.TextBoxFor(model => model.TaxRelief, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TaxRelief)
                    </div>
                </div>

             


                <div class="form-group">
                    <div class=" col-md-10">
                        <input type="submit" value="Calculate Tax" class="btn btn-lg  btn-block btn-primary" />
                    </div>
                </div>
            </div>
        }

       

    </div>


    <div class="col-md-5">

     
       

    

        @Html.Partial("PartialTaxCalculator")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>