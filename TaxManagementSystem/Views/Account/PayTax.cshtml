@model TaxManagementSystem.Models.PayTax

@{
    ViewBag.Title = "PayTax";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">Pay Tax</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   
    <hr />
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(model => model.Tin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Tin, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tin)
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.TaxRelief, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.TaxRelief,htmlAttributes: new { @class ="form-control"})
            @Html.ValidationMessageFor(model => model.TaxRelief)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Apply For Tax", "ApplyForTax")
</div>
