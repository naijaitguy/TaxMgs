@model TaxManagementSystem.Models.TaxRegistration

@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class=" row">
    <h2 class="text-center text-primary">My  Profile</h2>

    <div class="col-md-8">

        <table class="  table table-bordered table-hover col-md-8">

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>

                <td>
                    @Html.DisplayFor(model => model.Email)
                </td>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>

                <td>
                    @Html.DisplayFor(model => model.UserName)
                </td>
            </tr>



            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>

                <td>
                    @Html.DisplayFor(model => model.FullName)
                </td>
            </tr>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>

                <td>
                    @Html.DisplayFor(model => model.Address)
                </td>

            </tr>

            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNo)
                </th>

                <td>
                    @Html.DisplayFor(model => model.PhoneNo)
                </td>
            </tr>


        </table>

        <p>
            @Html.ActionLink("Edit Profile ", "ManageAccount", new { id = Session["UserName"] }, htmlAttributes: new { @class = "btn btn-primary " }) |
            @Html.ActionLink("Back to Home Page", "Home", "Account", routeValues:null, htmlAttributes: new { @class = "btn btn-warning " })
        </p>

    </div>

   

</div>